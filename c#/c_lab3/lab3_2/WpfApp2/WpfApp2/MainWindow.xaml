<Window x:Class="TextInsertApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Inserter" Height="300" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Перший текст:"/>
            <TextBox Name="firstTextBox" Height="50" TextWrapping="Wrap"/>
            
            <TextBlock Text="Другий текст:" Margin="0,5,0,0"/>
            <TextBox Name="secondTextBox" Height="50" TextWrapping="Wrap"/>
            
            <TextBlock Text="Слово для пошуку:" Margin="0,5,0,0"/>
            <TextBox Name="wordTextBox" Height="25"/>

            <Button Content="Обробити" Click="ProcessText_Click" Height="30" Margin="0,5,0,0"/>
            
            <TextBlock Text="Результат:" Margin="0,10,0,0"/>
            <TextBox Name="resultTextBox" Height="80" TextWrapping="Wrap" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>