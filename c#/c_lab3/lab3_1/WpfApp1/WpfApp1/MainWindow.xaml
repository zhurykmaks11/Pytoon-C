<Window x:Class="CharArrayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Char Array Counter" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введіть символи (разом або через пробіл):"/>
            <TextBox Name="inputTextBox" Height="25" Margin="0,5,0,0"/>
            <Button Content="Обчислити" Click="CalculateButton_Click" Height="30" Margin="0,5,0,0"/>
            <TextBlock Name="resultTextBlock" FontSize="14" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>