<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список товарів" Height="200" Width="450">
    <Grid>
        <ListBox x:Name="ProductList" HorizontalAlignment="Left" Height="100" Margin="20,20,0,0" VerticalAlignment="Top" Width="400"/>
        <Button Content="Сортувати за ціною" HorizontalAlignment="Left" Margin="20,150,0,0" VerticalAlignment="Top" Width="150" Click="SortByPrice"/>
        <Button Content="Сортувати за розміром" HorizontalAlignment="Left" Margin="265,150,0,0" VerticalAlignment="Top" Width="150" Click="SortBySize"/>
    </Grid>
</Window>