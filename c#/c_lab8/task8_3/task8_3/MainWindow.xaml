<Window x:Class="QuizApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вікторина про ОС" Height="400" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Введіть назву ОС (Windows, Linux, macOS, Android, iOS):" Margin="0,0,0,5"/>
            <TextBox x:Name="InputBox" Margin="0,0,0,10"/>

            <Button Content="Відповісти" Click="Submit_Click" Margin="0,0,0,10"/>
            <TextBlock x:Name="ResultText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <Button Content="Очистити" Click="Reset_Click" Margin="0,0,0,5"/>
            <Button Content="Завершити" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>